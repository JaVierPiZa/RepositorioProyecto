<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblNombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres:"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="xxx"
        android:id="@+id/Nombres"
        android:layout_toRightOf="@+id/lblNombres"/>

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblNombres"
        android:text="Telefono:"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Telefono"
        android:textSize="20sp"
        android:text="xxxx"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblNombres"
        android:layout_toRightOf="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/lblFecha"
      android:textSize="20sp"
        android:textStyle="bold"
        android:text="Fecha de Registro"
        android:layout_below="@+id/lblTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/Fecha"
        android:textSize="20sp"
        android:text="2021-11-02"
        android:paddingLeft="5dp"
        android:layout_below="@+id/lblTelefono"
        android:layout_toRightOf="@+id/lblFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>