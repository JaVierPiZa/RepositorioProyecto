<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pngtree_coffee_menu_wood_grain_background_png_image_396436"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnEnsalada"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="96dp"
        android:text="Ensaladas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAlmuerzo"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="60dp"
        android:onClick="btnAlmuerzo"
        android:text="Almuerzo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEnsalada" />

    <Button
        android:id="@+id/btnPostre"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="56dp"
        android:onClick="btnPostre"
        android:text="Postre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAlmuerzo" />

    <Button
        android:id="@+id/button5"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="180dp"
        android:onClick="Sensro"
        android:text="sensor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPostre"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnsql"
        android:layout_width="177dp"
        android:layout_height="63dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="76dp"
        android:onClick="FireBase"
        android:text="Firebase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>